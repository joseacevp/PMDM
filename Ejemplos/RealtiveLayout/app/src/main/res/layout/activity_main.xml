<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="LOGIN"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLogin"
        android:layout_margin="20dp"
        android:hint="Indique el Nombre" />

    <EditText
        android:id="@+id/editextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editextNombre"
        android:layout_margin="20dp"
        android:inputType="textPassword"
        android:hint="Indique el Password" />

    <Button
        android:id="@+id/botonAceptar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editextPassword"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Aceptar" />

    <Button
        android:id="@+id/botonCancelar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editextPassword"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/botonAceptar"
        android:text="Cancelar" />




</RelativeLayout>