<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejercicio1"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indica el Nombre"
        android:layout_margin="24dp"
        android:id="@+id/areaNombre"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Ingresar datos"
        android:onClick="botonRegistrar"
        android:id="@+id/botonIngresa"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etiNombre"
        android:layout_margin="24dp"
        android:text="Este es el nombre indicado:"
        />
</LinearLayout>